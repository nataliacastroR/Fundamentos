//Ejercicio 3
#include <iostream>
#include <string>
using namespace std;
int main() {
    string cadena;
    cout<<"Ingresar cadena de oracion: ";
    getline(cin, cadena); 
    for (int i = 0; i < cadena.length(); i++) {
        if (i == 0 || cadena[i - 1] == ' ') {
            cadena[i] = toupper(cadena[i]);
        }
    }

    cout << cadena << endl;

    return 0;
}
