#include <iostream>
using namespace std;

int main() {
    float n1,n2,n3,promedio;
    cout<<"introdusca el primer numero numero:";
    cin>>n1;
    if((n1>=0)&&(n1<=10))   
        {   
            cout<<"ingresa el segundo numero:";
            cin>>n2;
        }
    else
    {
        cout<<"los numeros no estan entre o y 10";
    }
   
    if((n2>=0)&&(n2<=10))   
        {   
            cout<<"ingresa el tercer numero:";
            cin>>n3;
        }
    else
    {
        cout<<"los numeros no estan entre o y 10";
    }
    
    if((n3>=0)&&(n3<=10))   
        {   
            promedio=(n1+n2+n3)/3;
            cout<<"el promedio es:"<<promedio;
        }
    else
    {
        cout<<"los numeros no estan entre o y 10";
    }
    return 0;
}
